!!! Strict
%html
  %head
    %link{ :href => '/rattan.css', :type => 'text/css', :rel => 'stylesheet'}/
    %link{ :href => '/application.css', :type => 'text/css', :rel => 'stylesheet'}/
    %title= (@title || 'No title') + ' - VertexDB'
    
  %body
    #wrap
      #logo
        %h1= link_to 'VertexDB', '/'
        %h2 &mdash; super fast graph database
        
        %ul.menu
          %li= link_to 'Home', '/'
          %li= link_to 'Installation', '/install'
          %li= link_to 'GitHub repo', 'http://github.com/stevedekorte/vertexdb'

      #content
        #primary
          = yield
        
        #secondary 
          %ul
            %li= link_to 'Quick start', '/quick_start'
            %li= link_to 'Guides', '/guides'
            %li
              = link_to 'API Reference', '/doc'
              - if @api
                %ul
                  - @api['actions'].each do |met_name, met|
                    %li= link_to met_name, "/doc##{met_name}"
          
          #tags
        
      #footer
        sinatra based 2010
